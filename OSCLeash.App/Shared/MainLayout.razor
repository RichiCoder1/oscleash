@inherits LayoutComponentBase

<FluentLayout>
    <FluentHeader>
        OSC Leash
    </FluentHeader>

    <FluentStack Orientation="Orientation.Horizontal" Width="100%">
        <FluentNavMenu Width="250">
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Home())" Href="/" Match="NavLinkMatch.All">Home</FluentNavLink>
            <FluentNavLink Icon="@(new Icons.Regular.Size24.Settings())" Href="/settings">Settings</FluentNavLink>
        </FluentNavMenu>

        <FluentBodyContent>
            @Body
        </FluentBodyContent>
    </FluentStack>
</FluentLayout>

<FluentToastProvider />
<FluentDialogProvider />
<FluentTooltipProvider />
<FluentMessageBarProvider />

<FluentDesignTheme StorageName="theme" CustomColor="#AA4465" />
